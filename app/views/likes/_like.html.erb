<% if user_signed_in? %>
  <% if wantlist.has_liked?(current_user.id) %>
    <%# "delete" %>
    <%= button_to like_url(id: wantlist.id), method: :delete, remote: true do %>
      <i class="fa fa-heart fa-2x faa-pulse animated-hover fa-color-selected"></i>
      <%= wantlist.want_lists_count %>
    <% end %>
  <% else %>
    <%# "create" %>
    <%= button_to likes_url(wantlist_id: wantlist.id), remote: true do %>
      <i class="fa fa-heart fa-2x faa-pulse animated-hover fa-color-normal"></i>
      <%= wantlist.want_lists_count %>
    <% end %>
  <% end %>
<% else %>
  <%= wantlist.want_lists_count %>
<% end %>
